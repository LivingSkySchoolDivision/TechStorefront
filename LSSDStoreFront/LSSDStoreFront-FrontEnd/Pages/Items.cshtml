@page "{Id:int?}"
@using System.Security.Claims;
@using LSSD.StoreFront.DB;
@using LSSD.StoreFront.Lib;
@model LSSDStoreFront_FrontEnd.Pages.ItemsModel
@{
    ViewData["Title"] = "Items";
}

@{
    string productIdString = RouteData.Values["Id"].ToString();
    int productId = productIdString.ToInt();

    var product = Model.Inventory.Item(productId);

    @*
        Available in Product:
        Id, CategoryID, Name, Description, LongDescription, Alert, ThumbnailFileName, RecyclingFee, Price, IsAvailable, IsLimitedByStock, IsLimitedByDate, IsSpecialOrderItem, AvailableFromDate, AvailableToDate
    @Model.Inventory.Item(productId).Name;


        add:
        RecyclingFee
        IsAvailable



        *@

}


    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/Categories/@product.Category.Id">@product.Category.Name</a></li>
            <li class="breadcrumb-item active" aria-current="page">@product.Name</li>
        </ol>
    </nav>


<div class="card">
    <div class="card-header text-center">
        <h4>@product.Name</h4>
    </div>
    <div class="card-body border-dark">
        <h5>Description</h5>

            <div class="row">
                <div class="col-8">
                    <p>@product.LongDescription</p>
                </div>
                <div class="col-4">
                    <table class="table  text-left">
                        <thead class="thead-dark">
                            <tr>
                                <th>
                                    Price
                                </th>
                                <th></th>
                            </tr> 
                        </thead>
                        <tr>
                            <td class="table-active">Base Price</td>
                            <td class="text-right">$@product.Price</td>
                        </tr>
                        <tr>
                            <td class="table-active">Recycling Fee</td>
                            <td class="text-right">@product.RecyclingFee</td>
                        </tr>
                        <tr>
                            <td class="table-active">GST</td>
                            <td class="text-right"></td>
                        </tr>
                        <tr>
                            <td class="table-active">PST</td>
                            <td class="text-right"></td>
                        </tr>
                        <tr>
                            <td class="table-active">Total Price</td>
                            <td class="table-primary text-right">$@product.Price</td>
                        </tr>
                    </table>
                </div>
                </div>

    </div>

    <div class="card-footer text-muted">

        <form class="form-inline float-right">
            <div class="form-group mx-sm-3 mb-2">
                <input type="number" value="1" min="0" max="1000" step="1" />
            </div>
            <button type="submit" class="btn btn-primary mb-2">Add to cart</button>
        </form>

    </div>

</div>

<p></p>

